{
  "name": "blog",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "build": "vuepress build blog",
    "lint": "vue-cli-service lint",
    "dev": "vuepress dev blog -d --temp .temp",
    "dev:debug": "node --inspect-brk ./node_modules/.bin/vuepress dev blog",
    "lint:js": "eslint --ext .js,.vue .",
    "lint:css": "stylelint '**/*.{vue,scss}'",
    "lint:md": "prettier --write '**/*.md'",
    "serve": "vue-cli-service serve"
  },
  "dependencies": {
    "highlightjs": "^9.10.0",
    "marked": "^0.3.17",
    "quicklink": "^1.0.0",
    "sass-resources-loader": "^1.3.3",
    "smooth-scrollbar": "^8.3.1",
    "scrollreveal": "^4.0.5",
    "vue": "^2.5.17",
    "vue-content-loader": "^0.2.1",
    "vue-router": "^3.0.1",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^7.2.1",
    "@commitlint/config-conventional": "^7.1.2",
    "@vue/cli-plugin-babel": "^3.1.1",
    "@vue/cli-plugin-eslint": "^3.1.5",
    "@vue/cli-service": "^3.1.4",
    "@vuepress/plugin-blog": "^1.0.0-alpha.27",
    "@vuepress/plugin-medium-zoom": "^1.0.0-alpha.27",
    "@vuepress/plugin-pwa": "^1.0.0-alpha.27",
    "@vuepress/plugin-register-components": "^1.0.0-alpha.27",
    "babel-eslint": "^10.0.1",
    "chalk": "^2.3.2",
    "dayjs": "^1.7.7",
    "debug": "^3.1.0",
    "eslint": "^5.8.0",
    "eslint-config-xo": "^0.25.1",
    "eslint-plugin-vue": "^5.0.0-0",
    "lint-staged": "^8.1.0",
    "lodash-es": "^4.17.11",
    "node-sass": "^4.7.2",
    "prettier": "^1.15.3",
    "sass-loader": "^6.0.6",
    "stylelint": "^9.9.0",
    "stylelint-config-idiomatic-order": "^6.2.0",
    "stylelint-config-standard": "^18.2.0",
    "stylelint-scss": "^3.4.0",
    "stylus": "^0.54.5",
    "stylus-loader": "^3.0.2",
    "vue-template-compiler": "^2.5.17",
    "vuepress": "^1.0.0-alpha.27"
  },
  "gitHooks": {
    "pre-commit": "lint-staged",
    "commit-msg": "commitlint -E GIT_PARAMS"
  },
  "lint-staged": {
    "*.{vue,js}": [
      "npm run lint:js -- --fix",
      "git add"
    ],
    "*.{scss,vue,md}": [
      "stylelint --fix",
      "git add"
    ],
    "*.{md,html}": [
      "prettier --write",
      "git add"
    ]
  }
}
